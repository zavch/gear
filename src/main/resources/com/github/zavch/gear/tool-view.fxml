<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
         prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.2-ea"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.zavch.gear.controller.ToolViewController">
    <tabs>
        <Tab text="JWT解析">
            <content>
                <SplitPane dividerPositions="0.5, 0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
                    <items>
                        <TextArea fx:id="jwt" prefHeight="200.0" prefWidth="200.0" promptText="粘贴JWT字符串"/>
                        <TextArea fx:id="payload" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0"/>
                        <Button fx:id="parseButton" mnemonicParsing="false" onAction="#parseJwt" prefHeight="23.0"
                                prefWidth="97.0" text="解析"/>
                    </items>
                </SplitPane>
            </content>
        </Tab>
        <Tab text="时间戳日期转换">
            <content>
                <GridPane prefHeight="276.0" prefWidth="600.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="294.0" minWidth="10.0" prefWidth="108.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="492.0" minWidth="10.0" prefWidth="492.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="131.0" minHeight="10.0" prefHeight="49.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="176.0" minHeight="10.0" prefHeight="56.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="266.0" minHeight="10.0" prefHeight="266.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label nodeOrientation="LEFT_TO_RIGHT" text="时间戳" GridPane.halignment="CENTER"
                               GridPane.valignment="CENTER"/>
                        <Label text="日期" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                               GridPane.valignment="CENTER"/>
                        <TextField fx:id="time" prefHeight="23.0" prefWidth="266.0" GridPane.columnIndex="1"/>
                        <SplitPane dividerPositions="0.5, 0.6, 0.7, 0.8" prefHeight="160.0" prefWidth="200.0"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <items>
                                <DatePicker fx:id="date" editable="false" prefHeight="23.0" prefWidth="223.0"/>
                                <Spinner fx:id="hour" accessibleRole="IMAGE_VIEW" editable="true" initialValue="0"
                                         max="23" min="0" prefHeight="25.0" prefWidth="65.0"/>
                                <Spinner fx:id="min" editable="true" initialValue="0" max="59" min="0" prefHeight="25.0"
                                         prefWidth="65.0"/>
                                <Spinner fx:id="second" editable="true" initialValue="0" max="59" min="0"
                                         prefHeight="25.0" prefWidth="65.0"/>
                                <Spinner fx:id="millisecond" editable="true" initialValue="0" max="999" min="0"
                                         prefHeight="25.0" prefWidth="75.0"/>
                            </items>
                        </SplitPane>
                        <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0"
                              GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <children>
                                <ToggleButton mnemonicParsing="false" onAction="#date2time" text="日期→时间戳">
                                    <HBox.margin>
                                        <Insets left="10.0" top="10.0"/>
                                    </HBox.margin>
                                </ToggleButton>
                                <ToggleButton mnemonicParsing="false" onAction="#time2date" text="时间戳→日期">
                                    <HBox.margin>
                                        <Insets left="10.0" top="10.0"/>
                                    </HBox.margin>
                                </ToggleButton>
                            </children>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                        </HBox>
                    </children>
                </GridPane>
            </content>
        </Tab>
        <Tab text="批量访问地址">
            <content>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0"
                                           prefWidth="244.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="375.0" minWidth="10.0"
                                           prefWidth="356.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label alignment="TOP_LEFT" text="类型"/>
                        <ComboBox fx:id="fileType" prefHeight="23.0" prefWidth="189.0" GridPane.columnIndex="1"/>
                        <Label text="文件" GridPane.rowIndex="1"/>
                        <Button fx:id="fileChooseButton" mnemonicParsing="false" onAction="#chooseFile"
                                prefHeight="23.0" prefWidth="189.0" text="选择文件" GridPane.columnIndex="1"
                                GridPane.rowIndex="1"/>
                        <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" visible="false"
                                     GridPane.rowIndex="2"/>
                        <Button fx:id="access" mnemonicParsing="false" onAction="#access" prefHeight="23.0"
                                prefWidth="190.0" text="批量访问地址" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </children>
                </GridPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
